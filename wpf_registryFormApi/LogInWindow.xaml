<Window x:Class="wpf_registryFormApi.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_registryFormApi"
        mc:Ignorable="d"
        Title="Bejelentkezés" Height="650" Width="400" Icon="users.ico" WindowStartupLocation="CenterScreen" BorderBrush="LightGray" BorderThickness="5">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Bejelentkezés" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Kérlek add meg az adataidat" FontSize="13" Foreground="Gray" HorizontalAlignment="Center"/>
            
            <GroupBox Header="Email" Margin="40 5" BorderBrush="Transparent">
                <TextBox Name="userEmail" FontSize="15"  Padding="5" BorderBrush="LightGray" />
            </GroupBox>
            
            <GroupBox Header="Jelszó" Margin="40 5" BorderBrush="Transparent">
                <PasswordBox Name="userPwd" FontSize="15"  Padding="5" BorderBrush="LightGray" />
            </GroupBox>
           
            
            <Button Name="login" Margin="45 20 45 10" Background="Black" Foreground="White" Padding="0 10" Content="Bejelentkezés"
                    FontSize="15"
                    FontWeight="DemiBold" Click="login_Click" IsDefault="True"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Margin="0 0 5 0">Még nem regisztráltál?</TextBlock>
                <TextBlock>
        <Hyperlink Click="Hyperlink_Click">
            Regisztrálj most!
        </Hyperlink>
                </TextBlock>
            </StackPanel>

        </StackPanel>

        
    </Grid>
</Window>
