<Window x:Class="wpf_registryFormApi.UserDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_registryFormApi"
        mc:Ignorable="d"
        Title="Felhasználói adatok" Height="650" Width="400" Icon="users.ico" WindowStartupLocation="CenterScreen" BorderBrush="LightGray" BorderThickness="5">
    <DockPanel>
        
        <!-- Menü -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Kilépés" Click="MenuItemQuit_Click">
                
            </MenuItem>

            <MenuItem Header="Adataim" Click="MenuItemData_Click"/>
        </Menu>

        <!-- Tartalom -->
        <Border Grid.Column="1" Background="#FFEBEBEB" Margin="20" BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Margin="0 35 0 0" Text="Felhasználói adatok" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                <StackPanel Grid.Row="1" Margin="20">
                    <TextBlock FontSize="15" FontWeight="Bold">Név:</TextBlock>
                    <TextBlock Name="nameTextBlock" FontSize="15" Margin="0 0 0 10"/>
                    <TextBlock FontSize="15" FontWeight="Bold">Email:</TextBlock>
                    <TextBlock Name="emailTextBlock" FontSize="15" Margin="0 0 0 10"/>
                    <TextBlock FontSize="15" FontWeight="Bold">Születési dátum:</TextBlock>
                    <TextBlock Name="dateTextBlock" FontSize="15" Margin="0 0 0 10"/>
                </StackPanel>
            </Grid>
        </Border>

    </DockPanel>
</Window>
