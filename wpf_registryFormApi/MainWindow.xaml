<Window x:Class="wpf_registryFormApi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_registryFormApi"
        mc:Ignorable="d"
        Title="Regisztrációs form" Height="650" Width="1000" Icon="users.ico" WindowStartupLocation="CenterScreen" BorderBrush="LightGray" BorderThickness="5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Regisztráció" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Kérlek add meg az adataidat" FontSize="13" Foreground="Gray" HorizontalAlignment="Center"/>
            <GroupBox Header="Név" Margin="40 5" BorderBrush="Transparent">
                <TextBox Name="userName" FontSize="15"  Padding="5" BorderBrush="LightGray" />
            </GroupBox>
            <GroupBox Header="Email" Margin="40 5" BorderBrush="Transparent">
                <TextBox Name="userEmail" FontSize="15"  Padding="5" BorderBrush="LightGray" LostFocus="userEmail_LostFocus"/>
            </GroupBox>
            <GroupBox Header="Születési dátum" Margin="40 5" BorderBrush="Transparent">
                <DatePicker Name="userDate" FontSize="15"  Padding="5" BorderBrush="LightGray" HorizontalAlignment="Left" Width="304" SelectedDateChanged="userDate_SelectedDateChanged"/>
            </GroupBox>
            <GroupBox Header="Jelszó" Margin="40 5" BorderBrush="Transparent">
                <PasswordBox Name="userPwd1" FontSize="15"  Padding="5" BorderBrush="LightGray" LostFocus="userPwd1_LostFocus"/>
            </GroupBox>
            <GroupBox Header="Jelszó megerősítés" Margin="40 5" BorderBrush="Transparent">
                <PasswordBox Name="userPwd2" FontSize="15"  Padding="5" BorderBrush="LightGray" LostFocus="userPwd2_LostFocus"/>
            </GroupBox>
            <StackPanel Orientation="Horizontal" Margin="45 5">
                <CheckBox Name="conditions" FontSize="13" Content="Elfogadom a felhasználási feltételeket" BorderBrush="LightGray"/>
            </StackPanel>
            <Button Name="registration" Margin="45 20 45 10" Background="Black" Foreground="White" Padding="0 10" Content="Regisztráció" Click="Registration_Click"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Margin="0 0 5 0">Már van fiókod?</TextBlock>
                <TextBlock><Hyperlink>Jelentkezz be</Hyperlink></TextBlock>
            </StackPanel>
        </StackPanel>

        <Border Grid.Column="1" Background="#FFEBEBEB" Margin="20" BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Margin="0 35 0 0" Text="Regisztrált felhasználók" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                <DataGrid ColumnWidth="auto"  IsReadOnly="True" Name="usersTable" Grid.Row="1" Margin="20"/>
            </Grid>
        </Border>
    </Grid>
</Window>
