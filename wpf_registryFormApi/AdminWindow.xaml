<Window x:Class="wpf_registryFormApi.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_registryFormApi"
        mc:Ignorable="d"
        Title="Admin felület" Height="650" Width="1000" Icon="users.ico" WindowStartupLocation="CenterScreen" BorderBrush="LightGray" BorderThickness="5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Jobb oldal-->
        <Border Background="#FFEBEBEB" Margin="20" BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Margin="0 35 0 0" Text="Regisztrált felhasználók" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                <DataGrid ColumnWidth="auto" 
                          AutoGenerateColumns="True"
                          IsReadOnly="True" 
                          Name="usersDataGrid" 
                          Grid.Row="1" 
                          Margin="5 20"
                          SelectionChanged="usersDataGrid_SelectionChanged"/>
            </Grid>
        </Border>
        
        <!--Bal oldal-->
        <StackPanel VerticalAlignment="Center" 
                    Grid.Column="1">
            <TextBlock Text="Felhasználó adatai" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
            
            <DockPanel LastChildFill="True"
                       Margin="10">
                <Label Content="Név:"
                       FontSize="15"  
                       Padding="5"
                       FontWeight="DemiBold"/>
                <TextBox Name="userName" 
                         FontSize="15"  
                         Padding="5" 
                         BorderBrush="LightGray"
                         />
            </DockPanel>
            <DockPanel LastChildFill="True"
                       Margin="10">
                <Label Content="E-mail:"
                       FontSize="15"  
                       Padding="5" 
                       FontWeight="DemiBold"/>
                <TextBox Name="userEmail" 
                         FontSize="15"  
                         Padding="5" 
                         BorderBrush="LightGray"
                         />
            </DockPanel>
            <DockPanel LastChildFill="True"
                       Margin="10">
                <Label Content="Dátum:"
                       FontSize="15"  
                       Padding="5"
                       FontWeight="DemiBold"/>
                <TextBox Name="userDate" 
                         FontSize="15"  
                         Padding="5" 
                         BorderBrush="LightGray"
                         />
            </DockPanel>
            <DockPanel LastChildFill="True"
                       Margin="10">
                <Label Content="Jelszó:"
                       FontSize="15"  
                       Padding="5"
                       FontWeight="DemiBold"/>
                <TextBox Name="userPassword" 
                         FontSize="15"  
                         Padding="5" 
                         BorderBrush="LightGray"
                         />
            </DockPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0"
                        HorizontalAlignment="Center">
                <Button Name="btn_add" 
                        Margin="2 10" 
                        Background="Black" 
                        Foreground="White" 
                        Padding="30 10" 
                        Content="Hozzáad"
                        FontSize="15"
                        FontWeight="DemiBold" Click="btn_add_Click"/>

                <Button Name="btn_modify" 
                        Margin="2 10" 
                        Background="Black" 
                        Foreground="White" 
                        Padding="30 10" 
                        Content="Módosítás"
                        FontSize="15"
                        FontWeight="DemiBold" Click="btn_modify_Click"/>

                <Button Name="btn_delete" 
                        Margin="2 10" 
                        Background="Black" 
                        Foreground="White" 
                        Padding="30 10" 
                        Content="Törlés" 
                        FontSize="15" 
                        FontWeight="DemiBold" Click="btn_delete_Click"/>

                <Button Name="btn_refresh" 
                        Margin="2 10" 
                        Background="Black" 
                        Foreground="White" 
                        Padding="30 10" 
                        Content="Frissítés" 
                        FontSize="15" 
                        FontWeight="DemiBold" Click="btn_refresh_Click"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left"
                        Margin="0 100 0 0">
                <TextBlock Margin="0 0 5 0" Text="Vissza a bejelentkezéshez:"/>
                <TextBlock>
                    <Hyperlink Name="linkLogin" Click="linkLogin_Click">
                        Bejelentkezés
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" 
            HorizontalAlignment="Left"
            Margin="0 5 0 0">
                <TextBlock Margin="0 0 5 0" Text="Vissza a regisztrációhoz:"/>
                <TextBlock>
                    <Hyperlink Name="linkReg" Click="linkReg_Click">
                        Regisztráció
                    </Hyperlink>    
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
            HorizontalAlignment="Left"
            Margin="0 5 0 0">
                <TextBlock Margin="0 0 5 0" Text="Kilépés az alkalmazásból:"/>
                <TextBlock>
                    <Hyperlink Name="linkExit" Click="linkExit_Click">
                        Kilépés
                    </Hyperlink>
                </TextBlock>
            </StackPanel>



        </StackPanel>
    </Grid>
</Window>
